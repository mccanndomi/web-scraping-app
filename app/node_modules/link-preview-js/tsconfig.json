{
  "compilerOptions": {
    "outDir": "build",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "types": ["jest"],
    "moduleResolution": "node",
    "declaration": true,
    "target": "es6",
    "skipLibCheck": true,
    "strict": true,
    "typeRoots": ["src/typings"],
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "build", "__tests__"]
}
